@import '../../node_modules/antd/dist/antd.css'
@import './antd-cover.styl'

.logo {
  height: 32px;
  margin: 16px;
  background: rgba(255, 255, 255, 0.3);
}
.dt-tree-container
  background-color #fff

.ant-layout-header
  height 48px
  background #2466ff
  .frame_header
    box-shadow 0px 2px 6px 0px rgba(7, 56, 156, 0.15)
    z-index 2
    padding 0 12px
    padding-left 0
    display flex
    align-items center
    justify-content space-between
    .left
      // width 200px
      height 48px
      margin-left 24px
      // opacity 0
      display flex
      color #fff
      font-size 22px
      font-weight bold
      // background-color #f9f9f9
      align-items center
      justify-content center
      img
        display inline-block
    .right
      margin-right 8px
      color #fff
      height 48px
      display flex
      align-items center
      justify-content center
      font-size 14px
      .nickName
        margin 0 6px
        display inline-block
        vertical-align middle
        text-overflow ellipsis
        overflow hidden
        white-space nowrap
        max-width 128px

.site-layout .site-layout-background {
  background: #fff;
}
  [data-theme="dark"] .site-layout .site-layout-background {
    background: #152751;
  }
.ant-menu.ant-menu-dark, .ant-layout-sider
  background: #152751
.ant-menu-dark .ant-menu-inline.ant-menu-sub
  background #121634
