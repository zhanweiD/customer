.dt-btn
  border: none
  width 100%
  line-height: 1.5;
  display: inline-block;
  font-weight: 400;
  text-align: center;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  font-size: 16px;
  border-radius: 4px;
  height: 40px;
  user-select: none;
  transition: all 0.3s cubic-bezier(0.645, 0.045, 0.355, 1);
  position: relative;
  -webkit-box-shadow: 0 2px 0 rgba(0, 0, 0, 0.015);
  box-shadow: 0 2px 0 rgba(0, 0, 0, 0.015);
  color: rgba(22, 50, 78, 0.65);
  background-color: #fff;
  border-color: #d9d9d9;
  animation-duration: 0.5s;
  animation-fill-mode: both;
  animation-timing-function: ease-in;
  &:active
    -webkit-animation-name: flash;
    animation-name: flash;

.dt-btn-primary
  color: #fff;
  background-color: #118BFC;
  border-color: #118BFC;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12);
  -webkit-box-shadow: 0 2px 0 rgba(0, 0, 0, 0.035);
  box-shadow: 0 2px 0 rgba(0, 0, 0, 0.035);
  &:hover, &:focus
    color: #fff;
    background-color: #40a9ff;
    border-color: #40a9ff;

.dt-btn, .dt-btn:active, .btn:focus
  outline: 0;
.dt-btn:before
  position: absolute;
  top: -1px;
  left: -1px;
  bottom: -1px;
  right: -1px;
  background: #fff;
  opacity: 0.35;
  content: '';
  border-radius: inherit;
  z-index: 1;
  -webkit-transition: opacity .2s;
  transition: opacity .2s;
  pointer-events: none;
  display: none;
.dt-btn[disabled]
  color: rgba(22, 50, 78, 0.25)
  background-color: #f5f5f5
  border-color: #d9d9d9
  text-shadow: none
  box-shadow: none


  @keyframes flash {
  // 0%, 50%, 100% {opacity: 1;}
  // 25%, 75% {opacity: 0;}
    0%, 100% {opacity: 1;}
    50% {opacity: 0;}
  }