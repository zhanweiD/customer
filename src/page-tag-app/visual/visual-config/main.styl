.visual-config

  .header-wrap
    background #fff
    margin-bottom 16px

  .header
    width 1000px
    margin 0 auto
    display flex
    height 56px
  
  .btn-back
    font-size 16px

  .header-step
    margin-top 16px

  .content
    margin 16px
    background #fff
    padding 8px 24px 70px 24px
    min-height calc(100vh - 136px)
    position relative

    .bottom-button
      position absolute
      left 0
      bottom 0
      width 100%
      border-top 1px solid #e9e9e9
      padding 10px 16px
      background #fff
      text-align center

  .ant-form
    .ant-form-item-label
      text-align right !important