.create-sales
  .create-content
    min-height: calc(100vh - 232px)
    display flex
    .content-left
      width 30%
      .left-header
        color #3F5FF4
        font-size 16px
        height 24
      .left-item
        border 1px solid #ccc
        border-radius 4px
        .left-item-header
          border-bottom 1px solid #ccc
      .left-item-select
        border 1px solid #3F5FF4
        color #3F5FF4
        border-radius 4px
        
        .left-item-header-select
          border-bottom 1px solid #3F5FF4
    .content-right
      width 70%
      .right-header
        border-bottom 1px solid #e6ebf3
      .step-one
        // height 100%
        min-height calc(100vh - 353px)
        .add-event-btn
          color #3F5FF4
          position absolute
          top 8px
          right 16px
        .steps-action
          position absolute
          left 0
          bottom 0
          width 100%
          border-top 1px solid #e9e9e9
          padding 10px 16px
          background #fff
          text-align center
  .ant-collapse
    border none
    .ant-collapse-content
      border none
      .ant-collapse-content-box
        padding 24px 2px 0px
    .ant-collapse-item 
      border none
      .ant-collapse-header
        height 32px
        line-height 32px
        padding 0
        padding-left 40px
        font-size 12px
        border-bottom 1px solid #e7eff6
        .ant-collapse-arrow
          top 11px
.conditions-div
  position absolute
  width 36px
  height 49px
  top -36px
  left 13px
  border 1px solid #ccc
  border-right none
  .conditions-btn
    display inline-block
    color #fff
    padding-top 1px
    text-align center
    width 32px
    height 24px
    position relative
    top 11px
    right 16px
    background-image: linear-gradient(180deg, #849AFF 1%, #3F5FF4 100%);
    border-radius: 2px;
