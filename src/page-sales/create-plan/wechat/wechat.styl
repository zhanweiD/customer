.wechat-node
  border 1px solid #E7EFF6

  .tag-drop
    // padding 0 24px 0 8px
    // background-color darkgrey
    background-color #ccc
    margin 4px 2px
    border-radius 12px
    user-select none
    cursor pointer
    outline none
    display inline-block
    position relative
    color

    &::after
      width 8px
      height 8px
      border-right 1px solid #333
      border-top 1px solid #333
      transform rotate(135deg)
      position absolute
      right 8px
      top 5px
      content ""
  
  .select-dropdown
    position absolute
    z-index 100
    border-radius 2px
    background-color #fff
    cursor pointer
    box-shadow 0 3px 10px #DDE0E4
    max-height 300px
    overflow-y auto

    .dropdown-item
      padding 5px 12px
      color rgba(0,0,0,0.65)

      &:hover
        background-color #f5f5f5
  
  .edit-item
    display inline-block
    word-break break-all
    outline none
    color rgba(0, 0, 0, 0.65)

    &:empty:before
      content '请输入'
      color #bfbfbf

.wechat-preview
  background-color transparent
  position absolute
  width 375px
  height 600px
  // border 1px solid #d3d3d3
  right 560px
  top 55px
  z-index 0
  transition width 0.4s ease-out, opacity 0.2s ease-in, visibility 0.2s ease-in
  width 0
  height 80%
  visibility 0
  opacity 0
  display none !important


  .preview-box
    width 280px
    height 250px
    background-color #fff
    position absolute
    margin-top 100px
    left 10px   
    top 0 
    white-space pre-line
    padding 8px
    border-radius 8px

.wechat-active
  display block !important
  opacity 1
  visibility 1
  width 300px
  z-index 2000
