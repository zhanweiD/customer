.create-sales
  height 100%
  .create-content
    // min-height: calc(100vh - 234px)
    // min-height: calc(100vh - 144px)
    display flex
    overflow-y auto
    // margin-bottom 0
    margin 0 16px 16px 16px
    .content-left
      width 320px
      // height calc(100vh - 251px)
      // height calc(100vh - 155px)
      overflow auto
      .left-header
        color #3F5FF4
        font-size 16px
        height 24
      .left-item
        border 1px solid #ccc
        border-radius 4px
        .left-item-header
          border-bottom 1px solid #ccc
      .left-item-select
        border 1px solid #3F5FF4
        color #3F5FF4
        border-radius 4px
        
        .left-item-header-select
          border-bottom 1px solid #3F5FF4
          background-color #f6f9fb
          border-radius 4px 4px 0 0
    .content-right
      // height calc(100vh - 251px)
      // height calc(100vh - 155px)
      position relative
      height 100%
      overflow auto
      .right-header
        border-bottom 1px solid #e6ebf3
      .step-one
        // height 100%
        .user-config
          .user-config
            .ant-select-selector
              height 24px
              overflow-y auto
        .add-event-btn
          color #3F5FF4
          position absolute
          top 10px
          right 16px
      .step-two
        .header-select
          line-height 40px
        .dynamic-delete-button
          position absolute
          font-size 16px
          top 10px
          left 368px
          color #999
        .add-event-btn 
          position absolute
          top 10px
          right 16px
      .step-three
        // .ant-collapse
        //   .ant-collapse-content
        //     .ant-collapse-content-box
        //       padding 24px 2px 1px
        //       background: rgba(246,249,251,0.40)
        .select-content
          height 100px
          width 50%
          overflow auto
          border 1px solid #e3ebf6
          margin-left 24px
          border-radius 4px
          padding 5px
          .item-title
            font-weight bold
          .item-descr
            white-space normal

        .template-tip
          width 47%
          border 1px solid #e3ebf6
          padding 16px 24px
          border-radius 8px
          margin-left 24px
          margin-top 24px
      .step-content
        // min-height calc(100vh - 381px)
        // min-height calc(100vh - 292px)
        height calc(100vh - 284px)
        padding-bottom 54px
        overflow-y auto

      .steps-action
        position absolute
        z-index 10
        left 0
        bottom 0
        width 100%
        border-top 1px solid #e9e9e9
        padding 10px 16px
        background #fff
        text-align center
      .dynamic-delete-button
        font-size 16px
        top 10px
        right 42px
  .ant-collapse
    border none
    .ant-collapse-content
      border none
      .ant-collapse-content-box
        padding 24px 2px 24px
        background: rgba(246,249,251,0.40);
    .ant-collapse-item 
      border none
      .ant-collapse-header
        height 40px
        line-height 40px
        background: #F6F9FB;
        border-radius: 4px 4px 0 0;
        padding 0
        padding-left 40px
        font-size 14px
        border-bottom 1px solid #e7eff6
        .ant-collapse-arrow
          top 13px
      
.conditions-div
  position absolute
  width 36px
  height 49px
  top -36px
  left 13px
  border 1px solid #ccc
  border-right none
  .conditions-btn
    display inline-block
    color #fff
    padding-top 1px
    text-align center
    width 32px
    height 24px
    position relative
    top 11px
    right 16px
    background-image: linear-gradient(180deg, #849AFF 1%, #3F5FF4 100%);
    border-radius: 2px;
.content-drawer
  .item-wrap
    border-bottom 1px solid #d4dce9
    margin-bottom 16px
    .content-item
      margin-top -20px
      .item-title
        font-weight bold
      .item-descr
        white-space normal
    .ant-radio-group
      width 100%
      max-height 90px
      position relative
      overflow hidden
      .ant-radio-wrapper
        width 100%
        max-height 90px
        .ant-radio
          position absolute
          right 0px
          top 0px


