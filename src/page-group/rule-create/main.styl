.rule-create
  min-height calc(100vh - 109px)
  padding 24px 24px 60px
  background-color #fff
  position relative

  .step-three
    text-align center
    .ant-legacy-form-item-children
      display block
      .ant-picker
        width 100%
    .save-info
      font-size 14px
      width 60%
      background-color #f3f4f9
      padding 24px
      margin 0 auto
      .h32
        height 32px
        line-height 32px
        
.modal-content
  height 100px
  width 200px
  text-align center
  margin 0 auto
  .tip-text
    margin-top 16px

.step-one
  calc(100% - 56px)
  padding-top 80px

.step-two
  calc(100% - 56px)
  padding-top 30px

.step-three
  calc(100% - 56px)
  padding-top 80px

.steps-action
  position absolute
  left 0
  bottom 0
  width 100%
  border-top 1px solid #e9e9e9
  padding 10px 16px
  background #fff
  text-align center